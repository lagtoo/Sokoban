#include <stdio.h>
void getUsername()
{
    FILE *fp;
    char inputUsername[10];
    char check[10];
    int i=0;
    printf("input name : ");
    scanf("%s",&inputUsername);

    if ((fp = fopen("username.txt","a+"))== NULL)
    {
        //fileCannotOpen();
        getUsername();
    }
    else
    {
        fprintf(fp,"%s",inputUsername);
    }
    fclose(fp);
    printf("Hello %s", inputUsername);
}
void printUsername() {
    FILE *fp;
    char username[10];
    if ((fp = fopen("username.txt", "r")) == NULL) {
        //fileCannotOpen();
        printUsername();
    } else {
        while (fgets(username, 10, fp) != NULL)
        {
            printf("%s", username);

        }


    }
    fclose(fp);
    printf("Hello %s", username);
}

void cls()
{
    system("clear");

}

int main()
{
    getUsername();
    cls();
    return 0;
}
